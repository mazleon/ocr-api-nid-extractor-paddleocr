# Deployment Environment Configuration
# Copy or override these values as needed for production deployments.

# Application
APP_NAME="NID Information Extraction API"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=production
ENABLE_DOCS=False
ENABLE_REDOC=False

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","bmp","tiff"]

# PaddleOCR
OCR_LANG=en
OCR_VERSION=PP-OCRv5
OCR_DET_MODEL=PP-OCRv5_mobile_det
OCR_REC_MODEL=en_PP-OCRv5_mobile_rec
OCR_USE_GPU=False
OCR_CONFIDENCE_THRESHOLD=0.3

# Model Cache Directories (for Docker: mount volume and point to /app/models)
# OCR_MODEL_CACHE_DIR=/app/models
# OCR_DET_MODEL_DIR=/app/models/PP-OCRv5_mobile_det
# OCR_REC_MODEL_DIR=/app/models/en_PP-OCRv5_mobile_rec

# Caching
ENABLE_CACHE=True
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_ROTATION="500 MB"
LOG_RETENTION="10 days"

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
